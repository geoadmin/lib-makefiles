include ./docker.mk
SHELL:=/bin/bash
VENV:=.venv
MAKO_CMD:=${VENV}/bin/mako-render
PROJECT_NAME:=sample_project_base_name

help:
	$(call dockerhelp)


docker-buid-%:
	$(call dockerbuild,${MAKO_CMD},${PROJECT_NAME},$*,--var "variable1=value1" --var "variable2=value2"})

docker-run-%:
	$(call dockerrun,${MAKO_CMD},${PROJECT_NAME},$*,--var "variable1=value1" --var "variable2=value2"})

docker-purge:
	$(call dockerpurge,${PROJECT_NAME})

docker-push-%:
	$(call dockerpush,${PROJECT_NAME},$*)

docker-pipe-%:
	$(call dockerpipe,${MAKO_CMD},${PROJECT_NAME},$*,--var "variable1=value1" --var "variable2=value2"})

clean:
	$(call dockerclean)
